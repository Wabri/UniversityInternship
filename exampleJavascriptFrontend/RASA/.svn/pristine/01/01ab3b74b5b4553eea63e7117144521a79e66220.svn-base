<div bv-flagged-error="{{bvErrorsWrapper.$invalid || bvErrorText!=undefined || bvWarningText!=undefined }}">
	<ng-transclude ng-form name='bvErrorsWrapper'></ng-transclude>
	<div ng-hide="bvHideErrors">
		<div ng-messages="bvErrorsWrapper.$error" ng-show="!bvErrorText && !bvErrorsWrapper.$pristine">

				<!-- AMOUNT -->
				<p class="text-muted help-block" ng-if="fieldName=='amount'" ng-message="min">{{ 'error.amount' | translate}}</p>
				<p class="text-muted help-block" ng-if="fieldName=='amount'" ng-message="maxlength">{{ 'error.amount.currency.toolength' | translate}}</p>
				<p class="text-muted help-block" ng-if="fieldName=='amount'" ng-message="max">{{ 'error.amount.currency.toolength' | translate}}</p>
				<p class="text-muted help-block" ng-if="fieldName=='amount'" ng-message="required">{{'Digits.amount' | translate}}</p>




				<!-- DEFAULT -->
				<p class="text-muted help-block" ng-message="dateValidity">{{'execution.executionDate.typeMismatch' | translate}}</p>
		   	<p class="text-muted help-block" ng-message="dateAllowed">{{'error.permanent.first.executionGeneric' | translate}}</p>
		   	<p class="text-muted help-block" ng-message="pattern">{{'error.permanent.repetitions' | translate}}</p>
		   	<p class="text-muted help-block" ng-message="min">{{'error.permanent.repetitions' | translate}}</p>
		   	<p class="text-muted help-block" ng-message="max">{{'error.permanent.repetitions' | translate}}</p>
		   	<p class="text-muted help-block" ng-message="number">{{'repetitions.typeMismatch' | translate}}</p>
		   	<p class="text-muted help-block" ng-message="maxLength">{{'error.amount.currency.toolength' | translate}}</p>
				<p class="text-muted help-block" ng-message="maxlength">{{'error.amount.currency.toolength' | translate}}</p>
		   	<p class="text-muted help-block" ng-message="required">{{'error.field.mandatory' | translate}}</p>


		</div>
		<div ng-show="bvErrorText">
			<p class="text-muted help-block">{{bvErrorText}}</p>
		</div>
		<div ng-messages="bvErrorsWrapper.warnings" ng-show="(bvErrorsWrapper.$valid || bvErrorsWrapper.$pristine) && !bvErrorText">
		    <p class="text-muted warn-block" ng-message="parentWarning">{{bvWarningText}}</p>
		</div>
	</div>
</div>
