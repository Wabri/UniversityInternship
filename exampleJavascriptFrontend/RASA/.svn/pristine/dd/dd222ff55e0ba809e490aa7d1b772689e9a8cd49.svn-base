<div ng-show="element.actions.MODIFY || element.actions.COPY || element.actions.DELETE || element.id>0">
  <hr>
  <div  style="float: left;margin-right: 8px;margin-bottom: 10px;">
    <a class="bps-btn-link" ng-click="modifyPayment(element.id,{text:('sidebar.common.slips'|translate),uistate:'contract.activities.cronology'})" ng-show="element.actions.MODIFY">
      <i class="fa fa-edit">
      </i>
      {{ 'app.action.edit' | translate }}
    </a>
  </div>
  <div  style="float: left;margin-right: 8px;margin-bottom: 10px;">
    <a class="bps-btn-link"  ng-click="copyPayment(element.id,{text:('sidebar.common.slips'|translate),uistate:'contract.activities.cronology'})" ng-show="element.actions.COPY">
      <i class="fa fa-copy">
      </i>
      {{ 'app.action.copy' | translate }}
    </a>
  </div>
  <div  style="float: left;margin-right: 8px;margin-bottom: 10px;">
    <a class="bps-btn-link "  ng-click="deletePayment(element.id)" ng-show="element.actions.DELETE">
      <i class="fa fa-trash-o">
      </i>
      {{ 'app.action.delete' | translate}}
    </a>
  </div>
  <div  style="float: left;margin-right: 8px;margin-bottom: 10px;">
    <a class="bps-btn-link "  ng-href="{{paymentPdfDownloadUrl}}" ng-show="element.id>0" target="_blank" >
      <i class="fa fa-print">
      </i>
      {{ 'payment.action.exportinpdf' | translate }}
    </a>
  </div>
</div>
