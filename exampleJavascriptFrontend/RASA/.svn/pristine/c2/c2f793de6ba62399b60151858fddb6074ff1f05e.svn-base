<md-content laout="column " flex>

  <md-card>
    <div layout="row " layout-wrap class="checkboxes ">
      <md-checkbox ng-model="vm.options.rowSelection ">Row Selection</md-checkbox>
      <md-checkbox ng-model="vm.options.multiSelect ">Multiple Selection</md-checkbox>
      <md-checkbox ng-model="vm.options.autoSelect ">Auto Selection</md-checkbox>
      <md-checkbox ng-model="vm.options.decapitate ">Decapitate</md-checkbox>
      <md-checkbox ng-model="vm.options.largeEditDialog ">Lard Edit Dialogs</md-checkbox>
      <md-checkbox ng-model="vm.options.boundaryLinks ">Pagination Boundary Links</md-checkbox>
      <md-checkbox ng-model="vm.options.limitSelect " ng-click="toggleLimitOptions() ">Pagination Limit Select</md-checkbox>
      <md-checkbox ng-model="vm.options.pageSelect ">Pagination Page Select</md-checkbox>
    </div>
  </md-card>

  <md-card>

    <md-toolbar class="md-table-toolbar md-default " ng-hide="vm.options.rowSelection && selected.length ">
      <div class="md-toolbar-tools ">
        <span>Nutrition</span>
        <div flex></div>
        <md-button class="md-icon-button " ng-click="vm.loadStuff() ">
          <md-icon>refresh</md-icon>
        </md-button>
      </div>
    </md-toolbar>

    <md-toolbar class="md-table-toolbar alternate " ng-show="vm.options.rowSelection && selected.length ">
      <div class="md-toolbar-tools ">
        <span>{{selected.length}} {{selected.length > 1 ? 'items' : 'item'}} selected</span>
      </div>
    </md-toolbar>

    <md-table-container>
      <table md-table md-row-select="vm.options.rowSelection " multiple="{{options.multiSelect}} " ng-model="vm.selected " md-progress="promise ">
        <thead ng-if="!vm.options.decapitate " md-head md-order="vm.query.order " md-on-reorder="vm.logOrder ">
          <tr md-row>
            <th md-column md-order-by="name ">
              <span>Dessert (100g serving)</span>
            </th>
            <th md-column md-order-by="type ">
              <span>Type</span>
            </th>
            <th md-column md-numeric md-order-by="calories.value " md-desc hide-xs>
              <span>Calories</span>
            </th>
            <th md-column md-numeric md-order-by="fat.value " hide-xs>
              <span>Fat (g)</span>
            </th>
            <th md-column md-numeric md-order-by="carbs.value " hide-xs>
              <span>Carbs (g)</span>
            </th>
            <th md-column md-numeric md-order-by="protein.value " hide-xs>
              <span>Protein (g)</span>
            </th>
            <th md-column md-numeric md-order-by="sodium.value " hide-xs>
              <span>Sodium (mg)</span>
            </th>
            <th md-column md-numeric md-order-by="calcium.value " hide-xs>
              <span>Calcium (%)</span>
            </th>
            <th md-column md-numeric md-order-by="iron.value " hide-xs>
              <span>Iron (%)</span>
            </th>
            <th md-column md-order-by="comment " hide-xs>
              <md-icon>comments</md-icon>
              <span>Comments</span>
            </th>
          </tr>
        </thead>
        <tbody md-body>
          <tr md-row md-select="dessert " md-on-select="vm.logItem " md-auto-select="vm.options.autoSelect " ng-disabled="vm.dessert.calories.value> 400" ng-repeat="dessert in vm.desserts.data | filter: filter.search | orderBy: vm.query.order | limitTo: vm.query.limit : (vm.query.page -1) * vm.query.limit">
            <td md-cell>{{dessert.name}}</td>
            <td md-cell>
              <md-select ng-model="dessert.type" placeholder="Other">
                <md-option ng-value="type" ng-repeat="type in vm.getTypes()">{{type}}</md-option>
              </md-select>
            </td>
            <td md-cell hide-xs>{{dessert.calories.value}}</td>
            <td md-cell hide-xs>{{dessert.fat.value | number: 2}}</td>
            <td md-cell hide-xs>{{dessert.carbs.value}}</td>
            <td md-cell hide-xs>{{dessert.protein.value | number: 2}}</td>
            <td md-cell hide-xs>{{dessert.sodium.value}}</td>
            <td md-cell hide-xs>{{dessert.calcium.value}}%</td>
            <td md-cell hide-xs>{{dessert.iron.value}}%</td>
            <td md-cell ng-dblclick="vm.editComment($event, dessert)" ng-class="{'md-placeholder': !dessert.comment}" hide-xs>
              {{dessert.comment || 'Add a comment'}}
            </td>
          </tr>
        </tbody>
      </table>
    </md-table-container>

    <md-table-pagination md-limit="vm.query.limit" md-limit-options="vm.limitOptions" md-page="vm.query.page" md-total="{{vm.desserts.count}}" md-page-select="vm.options.pageSelect" md-boundary-links="vm.options.boundaryLinks" md-on-paginate="vm.logPagination"></md-table-pagination>
  </md-card>
</md-content>