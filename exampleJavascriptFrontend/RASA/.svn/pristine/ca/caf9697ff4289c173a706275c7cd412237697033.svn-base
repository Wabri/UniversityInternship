<div class="sidebar" ng-hide="$state.includes('contracts') || $state.includes('login')">

    <div class="sidebar-content">
        <div class="sidebar-top">

            <div class="sidebar-close">
                <a ng-click="closeSidebar()">{{'close' | translate}}&nbsp;<i class="fa fa-times" aria-hidden="true"></i></a>
            </div>

            <div class="sidebar-contract" ng-show="contracts.length > 1">
                <div class="sidebar-title">
                    <h6>{{'label.contract' | translate}}</h6>
                    <a ng-click="changeContract();">{{'app.common.all' | translate}}</a>
                </div>
                <!--<pre>{{selectedContract}}</pre>-->
                <select class="c-select"
                        ng-options="contract as contract.contract for contract in contracts track by contract.id"
                        ng-model="selectedContract"
                        ng-change="selectContract(selectedContract)">
                    <option>{{'sidebar.common.selection' | translate}}</option>
                </select>
            </div>

            <ul class="sidebar-links">
                <!-- Overview/Homepage -->
                <li
                        ng-click="toggleMenu('contract.home.homepage')"
                        ng-class="{'active':$state.includes('contract.home')}"
                        class="sidebar-link"
                        ng-show="HOME">
                    <div class="sidebar-link-icon" ng-include="'images/icon-patrimonio.svg'"></div>
                    <span class="sidebar-link-label">{{'app.homepage.overview' | translate}}</span>
                    <span style="padding-right: 5px;"></span>
                    <span ng-if="numberPaymentBill > 0"
                          class="sidebar-link sidebar-link-pill" style="padding-left:8px">{{numberPaymentBill}}</span>
                    <!--span class="sidebar-link-pill">5</span-->
                </li>

                <!-- Movimenti e pagamenti -->
                <li
                        ng-click="toggleMenu('contract.activities.cronology')"
                        ng-class="{'active':$state.includes('contract.activities')}"
                        class="sidebar-link"
                        ng-show="paymentsRole||BOOK">
                    <div class="sidebar-link-icon" ng-include="'images/icon-pagamenti.svg'"></div>
                    <span class="sidebar-link-label" slips-label></span>

                </li>

                <li
                        ng-click="toggleMenu('contract.assets')"
                        ng-class="{'active':$state.includes('contract.assets') || $state.includes('contract.bookings')}"
                        class="sidebar-link"
                        ng-show="ASSET">
                    <div class="sidebar-link-icon" ng-include="'images/icon-prodotti.svg'"></div>
                    <span class="sidebar-link-label">{{'asset.title' | translate}}</span>
                </li>


                <!-- Documenti -->
                <li
                        ng-click="toggleMenu('contract.documents.cronology')"
                        ng-class="{'active':$state.includes('contract.documents.cronology') || $state.includes('contract.documents.permanent') || $state.includes('contract.documents.cronologyInevidence')}"
                        class="sidebar-link"
                        ng-show="DOCUMENTS">
                    <div class="sidebar-link-icon" ng-include="'images/icon-documenti.svg'"></div>
                   <span class="sidebar-link-label">{{'menu.documents.title' | translate}}</span>
                    <span style="padding-right: 10px;"></span>
                    <span ng-if="numberDOC > 0" class="sidebar-link sidebar-link-pill" style="padding-left:8px">{{numberDOC}}</span>
                    <!--span class="sidebar-link-pill">1</span-->
                </li>

                <!-- Impostazioni -->
                <li
                        ng-click="toggleMenu('contract.settings.tags')"
                        ng-class="{'active':$state.includes('contract.settings')}"
                        class="sidebar-link" ng-show="SETTINGS">
                    <div class="sidebar-link-icon" ng-include="'images/icon-impostazioni.svg'"></div>
                    <span class="sidebar-link-label">{{'app.common.setting' | translate}}</span>
                </li>
            </ul>

        </div>
    </div>
</div>
