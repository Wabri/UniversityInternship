<div id="bvProgressbar" class="" ng-switch="current>(3/4*total)">
  <div class="progress" ng-style="minHeight && {'height': minHeight}" ng-class="{'{{classBackground}}':classBackground}"
       style="border-radius: 0.25rem;">
    <div id="progressbarselector" class="progress-bar" ng-style="minHeight && {'height': minHeight}"
         role="progressbar">
         <span class="col-xs-12 text-center" ng-switch-when="true" style="padding: 2px;">{{progressText}}</span>
    </div>
    <div ng-switch-when="false" ng-style="minHeight && {'line-height': minHeight}"
          style="display:inline-block; vertical-align: top;">{{progressText}}</siv>
  </div>
</div>
