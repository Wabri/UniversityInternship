blockquote {
    @include clearfix;
    border-left: 7px solid $color-primary;
    font-size: .9em;
    margin-left: 0;
    padding-left: 1.5em;
    cite {
        float: right;
        font-size: 1.05em;
    }
}

dt {
    font-size: .95em;
    font-weight: 700;
}

dd {
    margin-bottom: .5em;
}

hr {
    border: 0;
    border-bottom: 1px solid $color-border;
}

abbr {
    cursor: help;
}

mark {
    background-color: $color-mark;
}

h1,
h2,
h3,
h4,
h5,
h6 {
    font-weight: 700;
    margin-bottom: .6em;
    margin-top: 1em;
    span {
        color: lighten($color-text, 25%);
        font-size: .8em;
        font-weight: 400;
        padding-left: .4em;
    }
}

kbd,
code,
pre,
samp {
    font-family: $font-name-mono, monospace;
    font-size: .9em;
}

kbd {
    border: 1px solid $color-border;
    border-radius: 3px;
    box-shadow: 0 1px 0 rgba(0, 0, 0, .2), 0 0 0 2px $color-background inset;
    display: inline-block;
    padding: 0 5px;
    text-shadow: 0 1px 0 $color-background;
    &[title] {
        cursor: help;
    }
}

pre {
    code {
        display: block;
    }
}

code {
    background-color: lighten($color-border, 27%);
    border: 1px solid $color-border;
    border-radius: 3px;
    padding: 1px 5px;
}

table {
    border-collapse: collapse;
    margin-bottom: 2em;
    width: 100%;
    caption {
        font-weight: 700;
        margin-bottom: .5em;
    }
    tr {
        border-bottom: 1px solid lighten($color-border, 15%);
        margin-bottom: .5em;
    }
    &.alternating {
        tr:nth-child(even) {
            background-color: $color-table-row;
        }
    }
    th {
        font-size: .95em;
        text-align: left;
    }
    th,
    td {
        padding: 7px;
    }
}