<div id="tabsbar"  class="tabsbar" ondragover="$(window).scrollTop($(window).scrollTop()+10);" ng-hide="$state.includes('profile') ||$state.includes('contracts')">
    <div class="tabsbar-tab" ng-if="SLIPS" ng-class="{'active':$state.includes('actions')}"  ng-hide="$state.includes('login') ||$state.includes('contracts')">
    	<a ui-sref="payments.init">
    		<i class="fa fa-database" aria-hidden="true"></i>
    		<span>{{'topbar.pay.label' | translate}}</span>
    	</a>
    </div>
	<div class="tabsbar-tab" ng-hide="$state.includes('login')">
		<a ui-sref="profile">
			<i class="fa fa-user" aria-hidden="true"></i>
			<span>{{'app.common.profile' | translate}}</span>
		</a>
	</div>

    <div class="tabsbar-tab" ng-if="MSGS" ng-class="{'active':$state.includes('messages')}" ng-hide="$state.includes('login') ||$state.includes('contracts')">
    	<a ui-sref="messages.news" class="tabsbar-link">
    		<i class="tabsbar-icon fa fa-comment" aria-hidden="true" >
          <div class="tabsbar-link-pill" ng-if="numberMSG > 0">{{numberMSG}}</div>
        </i>
    		<span>{{'menu.message.title' | translate}}</span>
    	</a>
    </div>
    <div class="tabsbar-tab" ng-class="{'active':$state.includes('help')}" ng-hide="$state.includes('login') ||$state.includes('contracts')" >
    	<a ui-sref="help.page">
    		<i class="fa fa-question-circle" aria-hidden="true"></i>
    		<span>{{'app.help.messagetitle' | translate}}</span>
    	</a>
    </div>
    <div class="tabsbar-tab" ng-hide="$state.includes('login')">
    	<a ng-click="logoutTaskBar()">
    		<i class="fa fa-sign-out" aria-hidden="true"></i>
    		<span>{{"logout.button.logout" | translate}}</span>
    	</a>
    </div>
<!--    <div class="tabsbar-tab" ng-class="{'active':$state.includes('account')}"><a ui-sref="account.profile"><i class="fa fa-user" aria-hidden="true"></i><span>Account</span></a></div>-->
</div>
