<div class="bv-loginLanguage">
  <i class="material-icons">language</i>
  <md-select flex="10" ng-model="Language" placeholder="{{'Lingua'|translate}}" class="md-no-underline bv-md-select" md-no-asterisk="false">
    <md-option value="ita">{{'Italiano'|translate}}</md-option>
    <md-option value="eng">{{'English'|translate}}</md-option>
    <md-option value="esp">{{'Espaniol'|translate}}</md-option>
    <md-option value="fra">{{'Fran√ßais'|translate}}</md-option>
    <md-option value="deu">{{'Deutsch'|translate}}</md-option>
  </md-select>
</div>

<div layout-gt-xs="row" layout-xs="column" layout-align="center">
  <md-container flex-gt-sm="20" flex-sm="60">
    <form name="userForm">
      <fieldset>
        <div class="bv-login bv-md-userpw">
          <i class="material-icons">face</i>
          <md-input-container flex="50" class="bv-md-input">
            <label>{{'Utente'|translate}}</label>
            <input md-maxlength="15" required name="User" ng-model="vm.user.name" type="user" />
            <div ng-show="userForm.User.$invalid && userForm.User.$touched" ng-messages="userForm.User.$invalid">
              <div ng-message="required">{{'campo obbligatorio'|translate}}</div>
              <div ng-message="md-maxlength">{{'il campo deve avere una lunghezza massima di 15 caratteri'|translate}}</div>
            </div>
          </md-input-container>
        </div>

        <div class="bv-login bv-md-userpw">
          <i class="material-icons">lock</i>
          <md-input-container flex="50" class="bv-md-input">
            <label>{{'Password'|translate}}</label>
            <input md-maxlength="10" required name="Password" ng-model="vm.user.password" type="password" />
            <div ng-show="userForm.Password.$invalid && userForm.Password.$touched" ng-messages="userForm.Password.$invalid">
              <div ng-message="required">{{'campo obbligatorio'|translate}}</div>
              <div ng-message="md-maxlength">{{'il campo deve avere una lunghezza massima di 10 caratteri'|translate}}</div>
            </div>
          </md-input-container>
        </div>
        <section layout="row" layout-sm="column" layout-align="center center" layout-wrap>
          <md-button ng-disabled="!vm.user.password||!vm.user.name" class="md-raised md-primary" ng-click="vm.SendData()">{{'CONFERMA'|translate}}</md-button>
        </section>
      </fieldset>
    </form>
  </md-container>
</div>
<div layout-gt-xs="row" layout-xs="column" layout-align="center" vc-recaptcha key="vm.recKey" ng-model="gRecaptchaResponse" on-success="vm.setResponse()" lang=""></div>
