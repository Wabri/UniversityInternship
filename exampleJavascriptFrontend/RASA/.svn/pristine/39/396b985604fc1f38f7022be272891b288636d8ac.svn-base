<div class="row">
    <div class="col-md-5" style="padding:20px;background-color: #F2F2F2">
        <div class="row">
            <div class="col-md-12 col-xs-12">
                <p ng-bind-html="ctrl.message"></p>


            </div>
        </div>
        <div class="row" style="padding-top: 10px">

            <div class="col-xs-12 col-md-12">
                <h4 class="text-uppercase ">{{ 'NUMERO DI TELEFONO' | translate}}</h4>
                <div id='telephoneNumber'>
                    <input type="text" ng-model="ctrl.telephoneNumber" ng-pattern-restrict="^[0-9\s]*$" class="form-control form-control-lg shadow-1"
                        ng-required="true">
                </div>

            </div>
        </div>
        <div class="row" style="padding-top: 10px;padding-bottom: 10px">

            <div class="col-xs-12 col-md-12">
                <h4 class="text-uppercase ">{{ 'EMAIL' | translate}}</h4>
                <div id='eMail'>
                    <input type="text" ng-model="ctrl.eMail" ng-pattern="/^[_a-z0-9]+(\.[_a-z0-9]+)*@[a-z0-9-]*\.([a-z]{2,4})$/" class="form-control form-control-lg shadow-1"
                        ng-required="true">
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-md-offset-6 col-md-6">
                <button type="button" ng-click="ctrl.saveEmailPhone()" class="btn bps-btn-primary btn-lg btn-block" ng-disabled="ctrl.telephoneNumber.length === 0 || ctrl.eMail.length === 0">
                    {{'Conferma' | translate}}
                </button>
            </div>
        </div>
    </div>
</div>

