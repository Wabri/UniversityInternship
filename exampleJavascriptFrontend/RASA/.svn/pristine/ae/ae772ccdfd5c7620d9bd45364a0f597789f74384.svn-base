<div ng-if="isVisible">
    <div class="progress-container {{widthBarClass}}">
        <div class="itemZxcvbn" id="level1-{{getId()}}">
        </div>
        <div class="itemZxcvbn" id="level2-{{getId()}}">
        </div>
        <div class="itemZxcvbn" id="level3-{{getId()}}">
        </div>
        <div class="itemZxcvbn" id="level4-{{getId()}}">
        </div>
    </div>
    <div class="extraInfo-container {{widthBoxesClass}}" ng-if="warning_body || suggestions_body">
        <div class="extraInfo-item" ng-if="warning_body">
            <span class="extraInfo-container-title">
                {{warning_title}}
            </span>
            <div class="extraInfo-container-body" ng-bind-html="warning_body">
            </div>
        </div>
        <div class="extraInfo-item" ng-if="suggestions_body" style="margin-top:15px">
            <span class="extraInfo-container-title">
                {{suggestions_title}}
            </span>
            <div class="extraInfo-container-body" ng-bind-html="suggestions_body">
            </div>
        </div>
    </div>
</div>
