<div>
    <div class="payment-stepper">
        <ul class="payment-stepper-steps" affix="true">
            <li class="payment-stepper-step" ng-repeat="step in steps" ng-class="{ 'active':step.selected }">
                <div class="ball"><a href="" ng-click="paymentFormCtrl.goToStep(step.$id)">
                    <div class="description">{{ step.name }}</div></a>
                </div>
            </li>
        </ul>
    </div>
    <div class="payment-steps" ng-transclude></div>
</div>
