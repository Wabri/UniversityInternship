'use strict';
angular.module('revux')
    .directive('slipsLabel', function ($rootScope, UtilsService,  $translate, $state, LanguageService, FunctionalityRolesService, $timeout) {

        var link = function (scope) {

            scope.$watch(function () {
                return FunctionalityRolesService.roles
            }, function () {
                    scope.slipLbl = FunctionalityRolesService.getSlipsLabel();
            }, true);


        };

        return {
            restrict: 'A',
            link: link,
            template: '{{slipLbl | translate}}',
            scope: {
            }
        };
    });
