<div class="">

  <div ng-if="bvHeaderInclude" class="card shadow-1" style="margin-bottom: 0;">
      <ul class="list-group list-group-flush list-group-payments">
          <li class="list-group-item list-group-item-payment">
              <div class="list-group-item-payment-abstract">

                <div class="" include-replace="bvHeaderInclude" ></div>

              </div>
          </li>
      </ul>
  </div>

  <div class="card shadow-1">
    <ul infinite-scroll="bvActivateInfiniteScroll&&showMoreElements()" class="list-group list-group-flush list-group-payments">
      <li class="list-group-item list-group-item-payment" ng-repeat="element in (datasourceList | limitTo:numShowedElements) track by $index " ng-class="{'list-group-item-payment-expanded':element.showDetails}" ng-class-even="'even'">
        <div class="list-group-item-payment-abstract" ng-click="element.showDetails = (element.showDetails) ? false : true">
          <!-- INCLUDE PREVIEW -->
          <div class="" include-replace="bvPreviewInclude" ></div>

        </div>
        <div class="list-group-item-payment-detail-wrapper">
          <div class="list-group-item-payment-detail">

            <!-- INCLUDE DETAIL -->
            <div class=""     include-replace="bvDetailInclude"></div>

          </div>
        </div>
      </li>
    </ul>
  </div>
</div>
