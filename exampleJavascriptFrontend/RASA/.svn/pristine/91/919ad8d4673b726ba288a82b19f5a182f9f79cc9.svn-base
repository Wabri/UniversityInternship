<h1 class="header">{{ 'SCHEDA INFORMATIVA VITTIMA DISPERSA' | translate }}</h1>


<div layout-gt-xs="row" layout-xs="column" layout-align="center">
  <md-input-container flex-gt-sm="40" flex-sm="40">
    <fieldset class="standard">
      <legend>
        <h3>{{'Fase del lavoro' | translate}}</h3></legend>
      <md-radio-group ng-model="vm.checked0">
        <md-radio-button value="Triage">{{'Triage' | translate}}</md-radio-button>
        <md-radio-button value="Squadra">{{'Squadra' | translate}}</md-radio-button>
        <md-radio-button value="CCU">{{'CCU' | translate}}</md-radio-button>
      </md-radio-group>
  </md-input-container>
</div>


<div layout-gt-xs="row" layout-xs="column" layout-align="center">
  <md-input-container flex-gt-sm="60" flex-sm="70">
    <label>{{'Cognome e Nome intervistato' | translate}}</label>
    <input name="interviewed" ng-model="project.interviewed">
    <div ng-messages="projectForm.interviewed.$error">
    </div>
  </md-input-container>
</div>

<div layout-gt-xs="row" layout-xs="column" layout-align="center">
  <md-input-container flex-gt-sm="40" flex-sm="40">
    <fieldset class="standard">
      <legend>
        <h3>{{'Presenza vittima' | translate}}</h3></legend>
      <md-radio-group ng-model="vm.checked1">
        <md-radio-button value="Non confermata">{{'Non confermata' | translate}}</md-radio-button>
        <md-radio-button value="Confermata">{{'Confermata' | translate}}</md-radio-button>
      </md-radio-group>
  </md-input-container>
</div>

<div layout-gt-xs="row" layout-xs="column" layout-align="center">
  <md-input-container flex-gt-sm="60" flex-sm="70">
    <label>{{'Cognome e Nome vittima' | translate}}</label>
    <input name="victim" ng-model="project.victim">
    <div ng-messages="projectForm.victim.$error">
    </div>
  </md-input-container>
</div>

<div layout-gt-xs="row" layout-xs="column" layout-align="center">
  <md-input-container flex-gt-sm="40" flex-sm="40">
    <fieldset class="standard">
      <legend>
        <h3>{{'Sesso' | translate}}</h3></legend>
      <md-radio-group ng-model="vm.checked2">
        <md-radio-button value="Maschio" class="bv-inline-block">{{'Maschio' | translate}}</md-radio-button>
        <md-radio-button value="Femmina" class="bv-inline-block">{{'Femmina' | translate}}</md-radio-button>
      </md-radio-group>
  </md-input-container>
</div>


<div layout-gt-xs="row" layout-xs="column" layout-align="center">
  <md-container flex-gt-sm="60" flex-sm="70">
    <h3>Ubicazione vittima</h3>
  </md-container>
</div>
<div layout-gt-xs="row" layout-xs="column" layout-align="center">
  <md-container class="bv-table-item" flex-gt-sm="60" flex-sm="70">
    <div layout="row" layout-align="center">
      <md-input-container flex="90">
        <label>{{'Indirizzo' | translate}}</label>
        <input name="address" ng-model="project.address">
        <div ng-messages="projectForm.address.$error">
        </div>
      </md-input-container>
    </div>
    <div layout="row" layout-align="center">
      <md-input-container flex="40">
        <label>{{'Località' | translate}}</label>
        <input name="place" ng-model="project.place">
        <div ng-messages="projectForm.place.$error">
        </div>
      </md-input-container>
      <md-input-container flex="40">
        <label>{{'Comune' | translate}}</label>
        <input name="city" ng-model="project.city">
        <div ng-messages="projectForm.city.$error">
        </div>
      </md-input-container>
      <md-input-container flex="10">
        <label>{{'Provincia' | translate}}</label>
        <input name="province" ng-model="project.province">
        <div ng-messages="projectForm.province.$error">
        </div>
      </md-input-container>
    </div>

    <div layout="row" layout-align="center">
      <md-container flex="5">
      </md-container>
      <md-container flex="95">
        <md-button class="md-raised md-primary bv-button-gps">{{"Trova coordinate GPS" | translate}}</md-button>
      </md-container>
    </div>
    <div layout="row" layout-align="center">
      <md-container flex="5">
      </md-container>
      <md-container flex="95">
        <h3>GD (gradi decimali)*</h3>
      </md-container>
    </div>
    <div layout="row" layout-align="center">
      <md-input-container flex="45">
        <label>{{'Latitudine' | translate}}</label>
        <input name="latitude" ng-model="project.latitude" ng-disabled="true">
        <div ng-messages="projectForm.latitude.$error">
        </div>
      </md-input-container>
      <md-input-container flex="45">
        <label>{{'Longitudine' | translate}}</label>
        <input name="longitude" ng-model="project.longitude" ng-disabled="true">
        <div ng-messages="projectForm.longitude.$error">
        </div>
      </md-input-container>

    </div>
  </md-container>
</div>

<div layout-gt-xs="row" layout-xs="column" layout-align="center">
  <md-input-container flex-gt-sm="30" flex-sm="35">
    <label>{{'Colore pelle' | translate}}</label>
    <input name="skinColor" ng-model="project.skinColor">
    <div ng-messages="projectForm.skinColor.$error">
    </div>
  </md-input-container>
  <md-input-container flex-gt-sm="30" flex-sm="35">
    <label>{{'Capelli' | translate}}</label>
    <input name="hair" ng-model="project.hair">
    <div ng-messages="projectForm.hair.$error">
    </div>
  </md-input-container>
</div>

<div layout-gt-xs="row" layout-xs="column" layout-align="center">
  <md-input-container flex-gt-sm="20" flex-sm="20">
    <label>{{'Età' | translate}}</label>
    <input name="age" type="number" min="0" step="1" ng-model="project.age">
    <div ng-messages="projectForm.age.$error">
      <div ng-message="">{{'Campo numerico intero.' | translate}}</div>
    </div>
  </md-input-container>
  <md-input-container flex-gt-sm="20" flex-sm="25">
    <label>{{'Peso' | translate}}</label>
    <input name="weight" type="number" min="0" step="1" ng-model="project.weight">
    <div ng-messages="projectForm.weight.$error">
      <div ng-message="">{{'Campo numerico intero.' | translate}}</div>
    </div>
  </md-input-container>
  <md-input-container flex-gt-sm="20" flex-sm="25">
    <label>{{'Altezza' | translate}}</label>
    <input name="height" type="number" min="0" step="1" ng-model="project.height">
    <div ng-messages="projectForm.height.$error">
      <div ng-message="">{{'Campo numerico intero.' | translate}}</div>
    </div>
  </md-input-container>
</div>

<div layout-gt-xs="row" layout-xs="column" layout-align="center">
  <md-input-container flex-gt-sm="60" flex-sm="70">
    <label>{{'Segni particolari riconducibili (Tatuaggi,Pearcing,...)' | translate}}</label>
    <input name="signs" ng-model="project.signs">
    <div ng-messages="projectForm.signs.$error">
    </div>
  </md-input-container>
</div>

<div layout-gt-xs="row" layout-xs="column" layout-align="center">
  <md-input-container flex-gt-sm="60" flex-sm="70">
    <label>{{'Stato di salute' | translate}}</label>
    <input name="health" ng-model="project.health">
    <div ng-messages="projectForm.health.$error">
    </div>
  </md-input-container>
</div>

<div layout-gt-xs="row" layout-xs="column" layout-align="center">
  <md-input-container flex-gt-sm="60" flex-sm="70">
    <label>{{'Lingua/e parlata/e' | translate}}</label>
    <input name="language" ng-model="project.language">
    <div ng-messages="projectForm.language.$error">
    </div>
  </md-input-container>
</div>

<div layout-gt-xs="row" layout-xs="column" layout-align="center">
  <md-input-container flex-gt-sm="60" flex-sm="70">
    <label>{{'Occupazione' | translate}}</label>
    <input name="occupation" ng-model="project.occupation">
    <div ng-messages="projectForm.occupation.$error">
    </div>
  </md-input-container>
</div>

<div layout-gt-xs="row" layout-xs="column" layout-align="center">
  <md-input-container flex-gt-sm="60" flex-sm="70">
    <label>{{'N° cellulare della vittima' | translate}}</label>
    <input name="phoneNr" ng-model="project.phoneNr">
    <div ng-messages="projectForm.phoneNr.$error">
    </div>
  </md-input-container>
</div>

<div layout-gt-xs="row" layout-xs="column" layout-align="center">
  <md-input-container flex-gt-sm="60" flex-sm="70">
    <label>{{'Social networks della vittima' | translate}}</label>
    <input name="socialNet" ng-model="project.socialNet">
    <div ng-messages="projectForm.socialNet.$error">
    </div>
  </md-input-container>
</div>

<div layout-gt-xs="row" layout-xs="column" layout-align="center">
  <md-input-container flex-gt-sm="60" flex-sm="70">
    <label>{{'Eventuali riferimenti/contatti per ulteriori informazioni (Genitori, parenti, amici, altri da specificare)' | translate}}</label>
    <textarea class="bv-max-height" ng-model="project.contacts" md-maxlength="500" rows="5" md-select-on-focus></textarea>
  </md-input-container>
</div>




<div layout-gt-xs="row" layout-xs="column" layout-align="center">
  <md-button class="md-raised md-primary bv-button-confirm">{{"INVIA" | translate}}</md-button>
</div>


