<div class="row">

    <span class="col-md-7 col-xs-12 pull-md-left pull-xs-left" style="margin-top:0.5em">
        <ui-select
                name="repeatSelectMonth"
                ng-required="true"
                ng-model="ctrl.monthSelected"
                ng-change="ctrl.change()"
                ng-disabled="ctrl.disableSelect"
                search-enabled="false" skip-focusser="true">
              <ui-select-match>
                  <span ng-bind="$select.selected.description"></span>
              </ui-select-match>
              <ui-select-choices  position="down" repeat="option in ctrl.months | filter: $select.search">
                  <div>
                      <div>
                          <span ng-bind="option.description" class="text-short"></span>
                      </div>
                  </div>
              </ui-select-choices>
        </ui-select>
    </span>
    <span class="col-md-5 col-xs-12 pull-md-left pull-xs-left" style="margin-top:0.5em">
        <ui-select
                name="repeatSelectYear"
                ng-required="true"
                ng-model="ctrl.yearSelected"
                ng-disabled="ctrl.disableSelect"
                ng-change="ctrl.change()"
                search-enabled="false"
                skip-focusser="true">
              <ui-select-match>
                  <span ng-bind="$select.selected.description"></span>
              </ui-select-match>
              <ui-select-choices  position="down" repeat="option in ctrl.years | filter: $select.search">
                  <div>
                      <div>
                          <span ng-bind="option.description" class="text-short"></span>
                      </div>
                  </div>
              </ui-select-choices>
        </ui-select>

    </span>
</div>