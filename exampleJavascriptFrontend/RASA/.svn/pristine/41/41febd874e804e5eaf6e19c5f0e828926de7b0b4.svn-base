.interview__header {
  font-size: rem(30);
  text-align: center;
}
// .mat-radio-button ~ .mat-radio-button {
//   padding-right: 16px;
// }

div fieldset.standard {
  border-radius: rem(1);
}

.icon-mail {
  color: green;
}

.icon-phone {
  color: dodgerblue;
}

.icon-address {
  color: red;
}

.bv-input-container {
  width: 100%;
}

.bv-bv-prova-icone {
  display: flex;
  justify-content: center;
  align-items: center;
}

#download {
  // float:left;
  cursor: pointer;
  color: #ccc;
  padding: 3px;
}

#download:hover {
  color: #dddd;
}

#bv-input-upload {
  border-style: none;
  padding-top: 0px;
}

.my-drop-zone {
  border: dotted 3px lightgray;
}

.nv-file-over {
  border: dotted 3px red;
}
/* Default class applied to drop zones on over */
.another-file-over-class {
  border: dotted 3px green;
}

body,
html {
  height: 100%;
}

canvas {
    background-color: #f3f3f3;
    -webkit-box-shadow: 3px 3px 3px 0 #e3e3e3;
    -moz-box-shadow: 3px 3px 3px 0 #e3e3e3;
    box-shadow: 3px 3px 3px 0 #e3e3e3;
    border: 1px solid #c3c3c3;
    height: 100px;
    margin: 6px 0 0 6px;
}

#snapshot {
  border-style: none;
  background-color: black;
  width: rem(300);
  height: rem(250);
  box-shadow: none;
}
