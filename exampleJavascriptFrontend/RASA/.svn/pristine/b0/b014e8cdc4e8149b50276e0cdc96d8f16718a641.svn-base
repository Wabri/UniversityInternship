
<div class="row box-movements"  ng-hide='!showZeroValues && !ctrl.data.credit && !ctrl.data.debit && !ctrl.data.saving' >
  <div class="col-xs-12">
    <h3 class="uppercase" style="margin-bottom: 2em;">{{ bvTitleKey||'property.movements.month' | translate }}</h3>
    <div class="row detail detail-movements " >
      <div class="col-xs-6">
        <div ng-style="{ 'width' : ctrl.percentageCredit + '%', 'background' : '#bedaa8' }">
          <h3 class="uppercase" style="line-height:26px;margin-left:.5rem; margin-bottom: .1rem">{{ 'property.entry' | translate }}</h3>
        </div>
      </div>
      <div ng-if="ctrl.data.credit >= 0" class="col-xs-6 text-right" style="line-height:26px;padding: 0">
        <span style="color:green;">+</span>{{ctrl.data.creditCompute|number:(ctrl.data.isoCode|fractionDigits)}} {{ctrl.data.isoCode}}
      </div>
      <div ng-if="ctrl.data.credit < 0" class="col-xs-6 text-right" style="line-height:26px;padding: 0">
        <span style="color:red;">-</span>{{ctrl.data.creditCompute|number:(ctrl.data.isoCode|fractionDigits)}} {{ctrl.data.isoCode}}
      </div>
    </div>
    <div class="row detail detail-movements" ng-show='ctrl.data.debit!=null'>
      <div class="col-xs-6">
        <div ng-style="{ 'width' : ctrl.percentageDebit + '%', 'background' : '#FDC963' }">
          <h3 class="uppercase" style="line-height:26px;margin-left:.5rem; margin-bottom: .1rem">{{ 'property.exit' | translate }}</h3>
        </div>
      </div>
      <!-- Le uscite devono avere il segno al contrario -->
      <div ng-if="ctrl.data.debit > 0" class="col-xs-6 text-right" style="line-height:26px;padding: 0">
        <span style="color:red;">-</span>{{ctrl.data.debitCompute|number:(ctrl.data.isoCode|fractionDigits)}} {{ctrl.data.isoCode}}
      </div>
      <div ng-if="ctrl.data.debit <= 0" class="col-xs-6 text-right" style="line-height:26px;padding: 0">
        <span style="color:green;">+</span>{{ctrl.data.debitCompute|number:(ctrl.data.isoCode|fractionDigits)}} {{ctrl.data.isoCode}}
      </div>
    </div>

    <div class="row detail detail-movements" ng-show='ctrl.data.saving!=null'>
      <div class="col-xs-6">
        <div ng-style="{ 'width' : ctrl.percentageSaving + '%', 'background' : '#7fbad1' }">
          <h3 class="uppercase" style="line-height:26px;margin-left:.5rem;  margin-bottom: .1rem">{{ 'property.saving' | translate }}</h3>
        </div>
      </div>
      <div ng-if="ctrl.data.saving >= 0" class="col-xs-6 text-right" style="line-height:26px;padding: 0">
        <span style="color:green;">+</span>{{ctrl.data.savingCompute|number:(ctrl.data.isoCode|fractionDigits)}} {{ctrl.data.isoCode}}
      </div>
      <div ng-if="ctrl.data.saving < 0" class="col-xs-6 text-right" style="line-height:26px;padding: 0">
        <span style="color:red;">-</span>{{ctrl.data.savingCompute|number:(ctrl.data.isoCode|fractionDigits)}} {{ctrl.data.isoCode}}
      </div>
    </div>

  </div>

</div>
