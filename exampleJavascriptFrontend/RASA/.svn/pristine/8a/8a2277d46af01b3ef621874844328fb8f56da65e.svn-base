<div class="list-group-payment-icon">
    <span class="date text-xs-center">
        <div class="month">
            {{ bvDateMs | amDateFormat:'MMM' }}
        </div>
        <div class="day">
            {{ bvDateMs | amDateFormat:'DD' }}
        </div>
        <div class="year"  ng-show="(bvDateMs | dateInDifferentYear)">
            {{ bvDateMs | amDateFormat:'YYYY' }}
        </div>
    </span>
</div>
